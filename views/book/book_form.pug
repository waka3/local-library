extends ../layout

block content
  h1 #{title}

   form(method="POST")
    div.form-group
      label(for="document") document:
      input#first_name.form-control(type="Array", placeholder="First name (Christian)" required='true' name='document')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li !== error.msg

