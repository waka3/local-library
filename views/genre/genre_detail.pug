extends ../layout

block content
  h1 Genre: #{genre.name}

  div(style='margin-left:20px; margin-top:20px')

    h4 Books

    dl
      if genre_books && genre_books.length > 0
        each val in genre_books
          dt
            a(href=val.url) #{val.title}
          dd #{val.summary}
      else
        p This genre has no books

        
      
